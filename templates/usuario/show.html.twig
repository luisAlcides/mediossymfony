{% extends 'base.html.twig' %}

{% block title %}Detalles de Usuario{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Detalles del Usuario</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ usuario.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ usuario.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ usuario.email }}</td>
                    </tr>
                    <tr>
                        <th>Contrase√±a</th>
                        <td><span class="text-muted fst-italic">********</span></td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ usuario.roles|join(', ') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_usuario_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la Lista
        </a>

        <a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>

        {{ include('usuario/_delete_form.html.twig', { 'class': 'd-inline' }) }}
    </div>
</div>
{% endblock %}
