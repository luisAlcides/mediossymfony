{% extends 'base.html.twig' %}

{% block title %}Listado de Usuarios{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Listado de Usuarios</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Email</th>
                    <th scope="col">Contrase√±a</th>
                    <th scope="col">Roles</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for usuario in usuarios %}
                <tr>
                    <td>{{ usuario.id }}</td>
                    <td>{{ usuario.nombre }}</td>
                    <td>{{ usuario.email }}</td>
                    <td>
                        <span class="text-muted fst-italic">********</span>
                    </td>
                    <td>
                        {{ usuario.roles|join(', ') }}
                    </td>
                    <td>
                        <a href="{{ path('app_usuario_show', {'id': usuario.id}) }}" class="btn btn-sm btn-info me-2">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        <a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">No se encontraron registros</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-end mt-4">
        <a href="{{ path('app_usuario_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Usuario
        </a>
    </div>
</div>
{% endblock %}
